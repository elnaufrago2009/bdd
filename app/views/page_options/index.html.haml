#region-page_options.container

  .region
    .region-title
      %h1= page_title!('page_options')

    .region
      - if current_admin
        .admin-control
          = link_to 'Crear Page option', new_page_option_path, class: 'btn btn-primary'

      .table-responsive
        %table.table
          %tr
            %th Title
            %th Subtitle
            %th Footer left
            %th Footer right
            %th Image option logo
            %th
            %th
            %th

          - @page_options.each do |page_option|
            %tr
              %td= page_option.title
              %td= page_option.subtitle
              %td= page_option.footer_left
              %td= page_option.footer_right
              %td= page_option.image_option_logo
              %td= link_to 'Ver', page_option, class: 'btn btn-info'
              - if current_admin
                %td= link_to 'Editar', edit_page_option_path(page_option), class: 'btn btn-success'
                %td= link_to 'Eliminar', page_option, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger'
