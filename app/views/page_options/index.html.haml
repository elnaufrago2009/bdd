#region-page_options.container

  .region
    .region-title.page-header
      %h1= page_title!('Page Options')

    .region
      / - if current_admin
      .admin-control
        = link_to 'Crear Page option', new_page_option_path, class: 'btn btn-primary'
      %br
      .table-responsive
        %table.table
          %tr
            %th Title
            %th Subtitle
            %th Acciones

          - @page_options.each do |page_option|
            %tr
              %td= page_option.title
              %td= page_option.subtitle
              %td
                = link_to 'Ver', page_option, class: 'btn btn-info'
                /- if current_admin
                = link_to 'Editar', edit_page_option_path(page_option), class: 'btn btn-success'
                = link_to 'Eliminar', page_option, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger'
