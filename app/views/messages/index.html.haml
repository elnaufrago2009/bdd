#region-messages.container

  .region
    .region-title.page-header
      %h1= page_title!('messages')

    .region
      /- if current_admin
      .admin-control
        = link_to 'Crear Message', new_message_path, class: 'btn btn-primary'
      %br
      .row
        .col-sm-8
          .table-responsive
            %table.table
              %tr
                %th Name
                %th Email
                %th Phone
                %th Content
                %th Acciones


              - @messages.each do |message|
                %tr
                  %td= message.name
                  %td= message.email
                  %td= message.phone
                  %td= message.content
                  %td
                    = link_to 'Ver', message, class: 'btn btn-info'
                    /- if current_admin
                    = link_to 'Editar', edit_message_path(message), class: 'btn btn-success'
                    = link_to 'Eliminar', message, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger'
