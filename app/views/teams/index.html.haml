#region-teams.container

  .region
    .region-title
      .page-header
        .row
          .col-sm-6
            %h1= page_title!('teams')
          .col-sm-6      
            %br
            - if current_admin
              .admin-control
                = link_to 'Crear Team', new_team_path, class: 'btn btn-primary pull-right'    

    .region
      .table-responsive
        %table.table.table-bordered.table-striped
          %tr
            %th Image
            %th Nombre
            %th Funcion
            %th Resumen
            %th Facebook
            %th Linkening
            %th Twitter
            %th Googlemas
            %th Acciones


          - @teams.each do |team|
            %tr
              %td= team.image
              %td= team.nombre
              %td= team.funcion
              %td= team.resumen
              %td= team.facebook
              %td= team.linkening
              %td= team.twitter
              %td= team.googlemas
              %td
                = link_to 'Ver', team, class: 'btn btn-info'
                - if current_admin
                  = link_to 'Editar', edit_team_path(team), class: 'btn btn-success'
                  = link_to 'Eliminar', team, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger'
