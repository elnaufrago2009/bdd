#region-portafolios.container

  .region
    .region-title.page-header
      %h1= page_title!('Portafolio')

    .region
      /- if current_admin
      .admin-control
        = link_to 'Crear Portafolio', new_portafolio_path, class: 'btn btn-primary'
      %br
      .row
        .table-responsive.col-sm-8
          %table.table
            %tr
              %th Title
              %th Subtitle
              %th Acciones

            - @portafolios.each do |portafolio|
              %tr
                %td= portafolio.title
                %td= portafolio.subtitle
                %td
                  = link_to 'Ver', portafolio, class: 'btn btn-info'
                  /- if current_admin
                  = link_to 'Editar', edit_portafolio_path(portafolio), class: 'btn btn-success'
                  = link_to 'Eliminar', portafolio, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger'
